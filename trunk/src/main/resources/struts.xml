<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.objectFactory.spring.autoWire" value="name" />
	<constant name="struts.objectFactory" value="spring" />

	<package name="default" extends="struts-default">
		<!-- 在这里添加Action定义 -->
		<action name="HelloWorld" class="com.wutianyi.study.struts2.action.HelloWorld">
			<result name="success">/WEB-INF/struts2/HelloWorld.jsp</result>
		</action>

		<action name="UserAction" class="userAction" method="addUser">
			<result name="success">/WEB-INF/struts2/userMessage.jsp</result>
		</action>
	</package>
</struts>