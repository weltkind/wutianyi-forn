<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="example1" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.wutianyi.study.quartz.ExampleJob"></property>
		<property name="jobDataAsMap">
			<map>
				<entry key="timeout" value="5"></entry>
			</map>
		</property>
		<property name="name" value="example1"/>
	</bean>
	
	<bean name="example2" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.wutianyi.study.quartz.ExampleJob"></property>
		<property name="jobDataAsMap">
			<map>
				<entry key="timeout" value="5"></entry>
			</map>
		</property>
		<property name="name" value="example2"/>
	</bean>
	
	<bean id="jobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="myExample"></property>
		<property name="targetMethod" value="doInt"></property>
	</bean>
	<bean id="myExample" class="com.wutianyi.study.quartz.ExampleJob"></bean>

	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="example1"></property>
		<property name="cronExpression" value="0/2 * * * * ?"></property>
	</bean>
	
	<bean id="cronTrigger1" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="example2"></property>
		<property name="cronExpression" value="0 0 19 * * ?"></property>
	</bean>
	
	<bean id="schedule" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTrigger"/>
				<ref bean="cronTrigger1"/>
			</list>
		</property>
	</bean>
	
</beans>
