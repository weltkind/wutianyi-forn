<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<aop:config>
		<aop:aspect ref="schemaAspect">
			<aop:pointcut expression="execution(* com.wutianyi.study.spring.aop.example.schema.SchemaInterface.schema*d(..))" id="poincut"/>
			<aop:before method="beforeMethodProcess" pointcut-ref="poincut"/>
		</aop:aspect>
	</aop:config>
	
	<bean id="schemaAspect" class="com.wutianyi.study.spring.aop.example.schema.SchemaAspect"></bean>
	<bean id="schemaInterface" class="com.wutianyi.study.spring.aop.example.schema.SchemaInterfaceImpl"></bean>
</beans>
